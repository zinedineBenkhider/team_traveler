<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_opinion_chip"
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout_chip_opinion"
        tools:text="sans opinion" />

    <LinearLayout
        android:id="@+id/linearLayout_chip_opinion"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:background="@drawable/background_chip_interest"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_personne_circle" />

        <TextView
            android:id="@+id/textView_name_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="10dp"
            android:gravity="center|left"
            android:text="TextView"
            android:textSize="16dp"
            tools:text="Martine" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>